<div class="container text-center">
        <h1 class="underlined title">Burger Logger</h1>
        <div class="row">
            <div class="col right-bordered">
                <h3>Current Burgers</h3>
                {{#each readyBurger}}
                    <p>Sample Burger Entries<button class="ml-2 devourBtn">Devour <i class="far fa-arrow-alt-circle-right"></i></button></p>
                {{/each}}
            </div>
            <div class="col">
                <h3>Devoured Zone</h3>
                {{#each devouredBurger}}
                    <p>Sample Devoured Burger Entries</p>
                {{/each}}
            </div>
        </div>
        <hr>
        <div>
            <h3><i class="fas fa-plus"></i> Add a burger</h3>
            <form id="addBurgerForm" method="POST">
                <input id="addBurger" type="text" placeholder="Burger Name"/>
                <button id="addBtn" type="submit">Add Me!</button>
            </form>
            <hr>
        </div>
        <div>
            <h3><i class="fas fa-sync-alt"></i> Update a Burger</h3>
            <form id="updateBurgerForm" method="PUT">
                <select>
                    <option class="updateBurgerOption">Sample Burger</option>
                </select>
                <input id="updateBurgerName" type="text" placeholder="Rename me!"/>
                <button id="updateBtn" type="submit">Update Me!</button>
            </form>
        </div>
    </div>